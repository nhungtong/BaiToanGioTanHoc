@model IEnumerable<BaiToanGioTanHoc.Models.LichHoc>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (User.IsInRole("Administrator"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayHoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TietBatDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TietKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioTanHoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LopHocPhan.MaLHP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhongHoc.TenPhong)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayHoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TietBatDau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TietKetThuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioTanHoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LopHocPhan.MaLHP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhongHoc.TenPhong)
                </td>
                <td>
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaLichHoc }) @Html.Raw(" | ")
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaLichHoc }) @Html.Raw(" | ")
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.MaLichHoc })
                </td>
            </tr>
        }

    </table>
</body>
</html>
