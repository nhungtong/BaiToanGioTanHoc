@model IEnumerable<BaiToanGioTanHoc.Models.LopHocPhan>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Administrator"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SiSo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiangVien.HoTenGiangVien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LopDanhNghia.TenLopDN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MonHoc.TenMH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiangVien.HoTenGiangVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopDanhNghia.TenLopDN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonHoc.TenMH)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaLHP }) @Html.Raw(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaLHP }) @Html.Raw(" | ")
                }
                @Html.ActionLink("Details", "Details", new { id = item.MaLHP })
            </td>
        </tr>
    }

</table>
